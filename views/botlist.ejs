<%- include("./inc/header.ejs", {bot, path}) %>
<main>
          <%
  let bots = Array.from(bot.guilds.get("332877090003091456").members.filter(m => m.user.bot).keys())
  
  let pages = (req.params.page * 12) - 12;
  if (!pages) pages = 0;
  let maxes = req.params.page * 12;
  if (req.params.page === 0 || !req.params.page) maxes = 12;
  let totalpage = Math.ceil(bots.length / 12);
  
  let page = Math.round(req.params.page);
  if (page <= 0 || !page) page = res.redirect('/bots/1')
  if (page > totalpage) page = totalpage
        %>
  <div class="container text-center white-text wow fadeInUp">
    <br><br><br>

    <section class="team-section text-center my-5">
      <h2 class="h1-responsive font-weight-bold">Zealcord Development Bot List</h2>
      <h6><%= bots.length %> Bots were approved.</h6>
      
      <br><br>

      <div class="row">
        
        <%-     
bots.slice(pages, maxes).map((item, i) => `
    <div class="col-lg-3 col-md-6 mb-lg-4 mb-5">
      <div class="avatar mx-auto">
        <a href="/bot/${item.toString()}"><img width="128px" src="${bot.users.get(item.toString()).displayAvatarURL()}?size=2048" class="rounded-circle z-depth-1"
          alt="Sample avatar"></a>
      </div>
      <h5 class="font-weight-bold mt-2 mb-1">${bot.users.get(item.toString()).tag}</h5>
      <!-- <p style=""><strong>PREFIX: ${body[item.toString()]}</strong></p> -->
<div class="btn-group btn-group" role="group" aria-label="Basic example">
  <a class="btn btn-outline-blue" href="/bot/${item.toString()}">View</a>
  <a class="btn btn-outline-blue" href="https://discordapp.com/oauth2/authorize?client_id=${item.toString()}&scope=bot&permissions=0" target="_blank">Invite</a>
</div>
    </div>
`).join(" ");
%>
      </div>
    </section>
    <p class="white-text text-center"><%-page%> / <%- totalpage%></p>
       <nav aria-label="Page">
  <ul class="pagination pg-blue justify-content-center">
    <li class="page-item"><a class="btn btn-outline-blue page-link white-text" href="/bots/<%- page - 1 %>"><<</a></li>
    <li class="page-item"><a class="btn btn-outline-blue page-link white-text" href="/bots/<%- page + 1 %>">>></a></li>
  </ul>
</nav>
    <br><br>
  </div>
</main>
<%- include("./inc/footer.ejs") %>